{
  "name": "gargamix-platform",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:prod": "turbo run build:prod",
    "build:libs": "turbo run build --filter='@gargamix/*'",
    "build:firebase": "turbo run build --filter=@gargamix/firebase-config",
    "dev": "turbo run dev",
    "dev:admin": "turbo run dev --filter=admin-app",
    "dev:web": "turbo run dev --filter=web-app",
    "dev:libs": "turbo run dev --filter='@gargamix/*'",
    "dev:firebase": "turbo run dev --filter=@gargamix/firebase-config",
    "dev:full": "concurrently \"pnpm dev:libs\" \"pnpm dev:web\"",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "test:pwa": "turbo run build:prod --filter=web-app && npx serve apps/web-app/dist/web-app/browser -s -l 4201",
    "firebase:deploy": "firebase deploy",
    "firebase:emulators": "firebase emulators:start",
    "clean": "turbo run clean && rm -rf node_modules/.cache"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.0.2",
    "@angular/cli": "^20.0.2",
    "@spartan-ng/cli": "0.0.1-alpha.475",
    "ng-packagr": "^20.0.0",
    "prettier": "^3.5.3",
    "turbo": "^2.5.4",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@10.12.1",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@angular/common": "^20.0.3",
    "@angular/core": "^20.0.3",
    "@angular/fire": "^20.0.1",
    "@angular/forms": "^20.0.3",
    "@angular/platform-browser": "^20.0.3",
    "@angular/platform-browser-dynamic": "^20.0.3",
    "@angular/router": "^20.0.3",
    "firebase": "^11.9.1",
    "tslib": "^2.8.1",
    "zone.js": "^0.15.1"
  }
}
